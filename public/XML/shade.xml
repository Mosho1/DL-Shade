    <Node>
        <UI>Grid</UI>
        <Cols>2</Cols>
        <RowHeight>100, 200</RowHeight>
        <ColWidth>400</ColWidth>
        <Sub>
            <Node>
                <UI>Button</UI>
                <Text>x = 3;
                    y = 3;
                </Text>
                <Cb>
                    <Fn>SETDLVARIABLE</Fn>
                    <Stat>x, 3</Stat>
                    <Event>Click</Event>
                </Cb>
                <Cb>
                    <Fn>SETDLVARIABLE</Fn>
                    <Stat>y, 3</Stat>
                    <Event>Click</Event>
                </Cb>
            </Node>
            <Node>
                <UI>Button</UI>
                <Text>z = 5;
                </Text>
                <Cb>
                    <Fn>SETDLVARIABLE</Fn>
                    <Stat>z, 5</Stat>

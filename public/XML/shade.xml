                <UI>NumEdit</UI>
                <vText>x</vText>
                <NumDecFormat>N</NumDecFormat>
            </Node>
            <Node>
                <UI>NumEdit</UI>
                <vText>y</vText>
                <NumDecFormat>N</NumDecFormat>
            </Node>
            <Node>
                <UI>NumEdit</UI>
                <vText>z</vText>
                <NumDecFormat>N</NumDecFormat>
            </Node>
            <Node>
                <UI>DropDown</UI>
                <Items>a|b|c;
                    ;
                    a|b|c;
                    ;
                    a|b|c</Items>
            </Node>
        </Sub>
    </Node>
